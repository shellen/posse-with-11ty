<script>
  const menuToggle = document.getElementById('menu-toggle');
  const fullScreenMenu = document.getElementById('full-screen-menu');

  // Add a close button in your menu
  const closeButton = document.createElement("button");
  closeButton.id = "close-menu";
  closeButton.textContent = "Close Menu";
  closeButton.classList.add("absolute", "top-4", "right-4", "text-sky-950");
  fullScreenMenu.appendChild(closeButton);

  menuToggle?.addEventListener('click', () => {
    fullScreenMenu.classList.remove('translate-x-full');
    document.body.style.overflow = 'hidden';
  });

  const closeMenu = document.getElementById('close-menu');
  closeMenu?.addEventListener('click', () => {
    fullScreenMenu.classList.add('translate-x-full');
    document.body.style.overflow = '';
  });
</script>
